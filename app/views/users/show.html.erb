<% content_for :sidebar_active, :users %>

<% content_for :header_label, "User" %>
<% content_for :header_title, @user.name %>
<% content_for :header_subtitle, "Member of the Artifisi workspace. Manage access, preferences, and activity history." %>
<% content_for :header_actions do %>
  <div class="flex items-center gap-2 rounded-2xl border border-slate-200 bg-slate-50 px-4 py-2 text-sm text-slate-500">
    <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="1.5"><circle cx="7" cy="7" r="4"></circle><path d="m11 11 4 4"></path></svg>
    <span>Search users</span>
  </div>
<% end %>

<section id="identity" class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
  <header class="space-y-2">
    <p class="text-xs font-semibold uppercase tracking-[0.35em] text-indigo-600">Identity</p>
    <h2 class="text-lg font-semibold text-slate-900">Account details</h2>
    <p class="text-sm text-slate-500">Core information that appears across the dashboard and collaboration tools.</p>
  </header>
  <div class="mt-6 grid gap-6 md:grid-cols-2">
    <div class="rounded-2xl border border-slate-200 bg-slate-50 p-5">
      <p class="text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">Name</p>
      <p class="mt-2 text-lg font-semibold text-slate-900"><%= @user.name %></p>
    </div>
    <div class="rounded-2xl border border-slate-200 bg-slate-50 p-5">
      <p class="text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">Email</p>
      <p class="mt-2 text-lg font-semibold text-slate-900"><%= @user.email %></p>
    </div>
    <div class="rounded-2xl border border-slate-200 bg-slate-50 p-5">
      <p class="text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">Joined</p>
      <p class="mt-2 text-lg font-semibold text-slate-900"><%= @user.created_at.to_fs(:long) %></p>
    </div>
    <div class="rounded-2xl border border-slate-200 bg-slate-50 p-5">
      <p class="text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">Last updated</p>
      <p class="mt-2 text-lg font-semibold text-slate-900"><%= @user.updated_at.to_fs(:long) %></p>
    </div>
  </div>
</section>

<section id="status" class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
  <header class="space-y-2">
    <p class="text-xs font-semibold uppercase tracking-[0.35em] text-indigo-600">Status</p>
    <h2 class="text-lg font-semibold text-slate-900">Workspace access</h2>
    <p class="text-sm text-slate-500">Keep tabs on the member's access level and recent changes.</p>
  </header>
  <div class="mt-6 grid gap-4 text-sm text-slate-600 md:grid-cols-2">
    <div class="rounded-2xl border border-slate-200 bg-slate-50 p-5">
      <p class="text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">Status</p>
      <p class="mt-2 inline-flex items-center gap-2 rounded-full bg-emerald-50 px-3 py-1 text-xs font-semibold uppercase tracking-[0.35em] text-emerald-600">Active</p>
    </div>
    <div class="rounded-2xl border border-slate-200 bg-slate-50 p-5">
      <p class="text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">Role</p>
      <p class="mt-2 text-lg font-semibold text-slate-900">Member</p>
    </div>
  </div>
</section>

<section id="actions" class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
  <header class="space-y-2">
    <p class="text-xs font-semibold uppercase tracking-[0.35em] text-indigo-600">Actions</p>
    <h2 class="text-lg font-semibold text-slate-900">Manage this user</h2>
    <p class="text-sm text-slate-500">Perform maintenance tasks or remove the account if needed.</p>
  </header>
  <div class="mt-6 flex flex-wrap gap-3 text-sm">
    <%= link_to "Edit user", edit_user_path(@user), class: "inline-flex items-center justify-center gap-2 rounded-full border border-slate-200 bg-white px-4 py-2 font-semibold text-indigo-600 transition hover:-translate-y-0.5 hover:bg-indigo-50" %>
    <%= button_to "Delete user", user_path(@user), method: :delete, data: { turbo_confirm: "Delete #{@user.name}?" }, class: "inline-flex items-center justify-center gap-2 rounded-full border border-rose-200 bg-white px-4 py-2 font-semibold text-rose-600 transition hover:-translate-y-0.5 hover:bg-rose-50" %>
  </div>
</section>
