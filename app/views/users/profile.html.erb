<% content_for :sidebar_active, :profile %>

<% content_for :header_label, "Profile" %>
<% content_for :header_title, "Welcome back, #{@user.name}" %>
<% content_for :header_subtitle, "Review your Artifisi account details and keep your preferences aligned." %>
<% content_for :header_actions do %>
  <div class="flex items-center gap-3">
    <%= link_to "Edit profile", edit_user_path(@user), class: "inline-flex items-center justify-center gap-2 rounded-full bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:-translate-y-0.5 hover:bg-indigo-700" %>
    <div class="hidden items-center gap-2 rounded-2xl border border-slate-200 bg-slate-50 px-4 py-2 text-sm text-slate-500 md:inline-flex">
      <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="1.5"><circle cx="7" cy="7" r="4"></circle><path d="m11 11 4 4"></path></svg>
      <span>Quick search</span>
    </div>
  </div>
<% end %>

<section id="identity" class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
  <header class="space-y-2">
    <p class="text-xs font-semibold uppercase tracking-[0.35em] text-indigo-600">Identity</p>
    <h2 class="text-lg font-semibold text-slate-900">Profile information</h2>
    <p class="text-sm text-slate-500">These details appear on dashboards and user management lists.</p>
  </header>
  <div class="mt-6 grid gap-6 md:grid-cols-2">
    <div class="rounded-2xl border border-slate-200 bg-slate-50 p-5">
      <p class="text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">Name</p>
      <p class="mt-2 text-lg font-semibold text-slate-900"><%= @user.name %></p>
    </div>
    <div class="rounded-2xl border border-slate-200 bg-slate-50 p-5">
      <p class="text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">Email</p>
      <p class="mt-2 text-lg font-semibold text-slate-900"><%= @user.email %></p>
    </div>
  </div>
</section>

<section id="security" class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
  <header class="space-y-2">
    <p class="text-xs font-semibold uppercase tracking-[0.35em] text-indigo-600">Security</p>
    <h2 class="text-lg font-semibold text-slate-900">Protect your account</h2>
    <p class="text-sm text-slate-500">Keep credentials and active sessions under control.</p>
  </header>
  <ul class="mt-6 space-y-4 text-sm text-slate-600">
    <li class="flex items-start justify-between gap-4 rounded-2xl border border-slate-200 bg-slate-50 p-4">
      <div>
        <p class="font-semibold text-slate-900">Password</p>
        <p class="text-xs text-slate-500">Last changed <%= @user.updated_at.to_date.to_fs(:long) %></p>
      </div>
      <%= link_to "Reset", edit_user_path(@user, anchor: "password"), class: "text-xs font-semibold uppercase tracking-[0.3em] text-indigo-600 hover:text-indigo-700" %>
    </li>
    <li class="flex items-start justify-between gap-4 rounded-2xl border border-slate-200 bg-slate-50 p-4">
      <div>
        <p class="font-semibold text-slate-900">Sessions</p>
        <p class="text-xs text-slate-500">Sign out from other browsers to keep your data secure.</p>
      </div>
      <a href="#sessions" class="text-xs font-semibold uppercase tracking-[0.3em] text-indigo-600 hover:text-indigo-700">Manage</a>
    </li>
  </ul>
</section>

<section id="preferences" class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
  <header class="space-y-2">
    <p class="text-xs font-semibold uppercase tracking-[0.35em] text-indigo-600">Preferences</p>
    <h2 class="text-lg font-semibold text-slate-900">Workspace defaults</h2>
    <p class="text-sm text-slate-500">Tailor how Artifisi feels each time you sign in.</p>
  </header>
  <div class="mt-6 space-y-4 text-sm text-slate-600">
    <div class="flex items-center justify-between rounded-2xl border border-slate-200 bg-slate-50 px-5 py-3">
      <span class="font-semibold text-slate-900">Language</span>
      <span class="rounded-full bg-white px-3 py-1 text-xs font-semibold uppercase tracking-[0.3em] text-slate-600">EN</span>
    </div>
    <div class="flex items-center justify-between rounded-2xl border border-slate-200 bg-slate-50 px-5 py-3">
      <span class="font-semibold text-slate-900">Notifications</span>
      <span class="text-xs text-slate-500">Enabled</span>
    </div>
    <div class="flex items-center justify-between rounded-2xl border border-slate-200 bg-slate-50 px-5 py-3">
      <span class="font-semibold text-slate-900">Theme</span>
      <span class="text-xs text-slate-500">Auto</span>
    </div>
  </div>
</section>

<section id="support" class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
  <header class="space-y-2">
    <p class="text-xs font-semibold uppercase tracking-[0.35em] text-indigo-600">Support</p>
    <h2 class="text-lg font-semibold text-slate-900">Need anything else?</h2>
    <p class="text-sm text-slate-500">The Artifisi crew is on hand for bespoke setups or account adjustments.</p>
  </header>
  <div class="mt-6 space-y-3 text-sm text-slate-600">
    <a href="mailto:hello@artifisi.com" class="inline-flex items-center gap-2 text-indigo-600 hover:text-indigo-700">
      <span>Contact support â†’</span>
    </a>
    <p class="text-xs text-slate-500">We respond within one business day.</p>
  </div>
</section>
