<header class="sticky top-0 z-40 flex flex-col gap-4 border-b border-slate-200/80 bg-white/80 px-6 py-6 backdrop-blur supports-[backdrop-filter]:bg-white/60 lg:px-10 lg:flex-row lg:items-center lg:justify-between">
  <div>
    <% if label.present? %>
      <p class="text-xs font-semibold uppercase tracking-[0.35em] text-indigo-600"><%= label %></p>
    <% end %>
    <h1 class="mt-2 text-2xl font-semibold tracking-tight text-slate-900"><%= title %></h1>
    <% if subtitle.present? %>
      <p class="text-sm text-slate-500"><%= subtitle %></p>
    <% end %>
  </div>
  <% if actions.present? %>
    <div class="flex items-center gap-2">
      <%= actions %>
    </div>
  <% end %>
</header>
