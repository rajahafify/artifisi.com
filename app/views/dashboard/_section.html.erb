<section id="<%= id %>" class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
  <header class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
    <div>
      <p class="text-xs font-semibold uppercase tracking-[0.35em] text-indigo-600"><%= badge %></p>
      <h2 class="mt-2 text-xl font-semibold text-slate-900"><%= title %></h2>
      <% if subtitle.present? %>
        <p class="text-sm text-slate-500"><%= subtitle %></p>
      <% end %>
    </div>
    <div class="flex flex-col items-stretch gap-2 sm:flex-row">
      <%= link_to add_label,
                  add_path,
                  class: "inline-flex items-center justify-center gap-2 rounded-full bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:-translate-y-0.5 hover:bg-indigo-700" %>
      <%= link_to view_label,
                  view_path,
                  class: "inline-flex items-center justify-center gap-2 rounded-full border border-slate-200 bg-white px-4 py-2 text-sm font-semibold text-slate-700 transition hover:-translate-y-0.5 hover:bg-slate-100" %>
    </div>
  </header>

  <div class="mt-6 overflow-hidden rounded-2xl border border-slate-200">
    <%= yield %>
  </div>
</section>
