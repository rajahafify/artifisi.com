<table class="min-w-full divide-y divide-slate-200 text-left text-sm">
  <thead class="bg-slate-50 text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">
    <tr>
      <th scope="col" class="px-6 py-3">Title</th>
      <th scope="col" class="px-6 py-3">Status</th>
      <th scope="col" class="px-6 py-3">Author</th>
      <th scope="col" class="px-6 py-3">Updated</th>
      <th scope="col" class="px-6 py-3 text-right">Actions</th>
    </tr>
  </thead>
  <tbody class="divide-y divide-slate-200 bg-white">
    <% if posts.any? %>
      <% posts.each do |post| %>
        <tr>
          <td class="px-6 py-4 font-medium text-slate-900"><%= link_to post.title, post_path(post), class: "hover:text-indigo-600" %></td>
          <td class="px-6 py-4">
            <span class="inline-flex items-center rounded-full border border-slate-200 bg-slate-50 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-slate-600"><%= post.status.titleize %></span>
          </td>
          <td class="px-6 py-4 text-slate-600"><%= post.author.name %></td>
          <td class="px-6 py-4 text-slate-500"><%= post.updated_at.to_fs(:long) %></td>
          <td class="px-6 py-4">
            <div class="flex justify-end gap-2">
              <%= link_to "Edit", edit_post_path(post), class: "inline-flex items-center gap-2 rounded-full border border-slate-200 bg-white px-3 py-1.5 text-xs font-semibold uppercase tracking-wide text-slate-700 transition hover:-translate-y-0.5 hover:bg-slate-100" %>
              <%= button_to "Delete", post_path(post), method: :delete, data: { turbo_confirm: "Delete #{post.title}?" }, class: "inline-flex items-center gap-2 rounded-full border border-rose-200 bg-white px-3 py-1.5 text-xs font-semibold uppercase tracking-wide text-rose-600 transition hover:-translate-y-0.5 hover:bg-rose-50" %>
            </div>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="5" class="px-6 py-4 text-sm text-slate-500">No posts found. Start by creating a new post.</td>
      </tr>
    <% end %>
  </tbody>
</table>
