<aside class="flex flex-col justify-between border-b border-slate-200/60 bg-slate-50 p-6 lg:sticky lg:top-0 lg:h-screen lg:border-b-0 lg:border-r">
  <% nav_link = lambda do |key, label, icon, path|
    active_item = (active == key)
    classes = ["flex items-center gap-3 rounded-xl px-4 py-3 transition"]
    if active_item
      classes << "border border-slate-200 bg-white text-indigo-600 shadow-sm"
    else
      classes << "text-slate-600 hover:bg-slate-100"
    end
    link_to path, class: classes.join(" "), aria: (active_item ? { current: "page" } : {}) do
      concat(content_tag(:span, icon, class: "inline-flex h-8 w-8 items-center justify-center rounded-full #{active_item ? 'bg-indigo-50 text-indigo-500' : 'bg-slate-100 text-slate-500'}"))
      concat content_tag(:span, label)
    end
  end %>

  <div class="space-y-10">
    <div class="space-y-2">
      <span class="inline-flex h-12 w-12 items-center justify-center rounded-2xl bg-gradient-to-r from-[#615bff] to-[#3d32ff] text-white text-xl font-semibold shadow-sm">A</span>
      <div>
        <p class="text-xs font-semibold uppercase tracking-[0.35em] text-indigo-600">Navigation</p>
        <p class="text-sm text-slate-500">Quick access</p>
      </div>
    </div>

    <nav class="space-y-1 text-sm font-medium text-slate-600">
      <%= nav_link.call(:dashboard, "Dashboard", "ðŸ ", dashboard_path) %>
      <%= nav_link.call(:profile, "Profile", "ðŸ‘¤", profile_path) %>
      <%= nav_link.call(:users, "Users", "ðŸ—‚ï¸", users_path) %>
      <%= nav_link.call(:blogs, "Blog posts", "âœï¸", posts_path) %>
    </nav>

  </div>

  <div class="space-y-3">
    <div class="space-y-2 text-sm text-slate-600">
      <p class="text-xs font-semibold uppercase tracking-[0.35em] text-slate-400">Account</p>
      <div class="rounded-xl border border-slate-200 bg-white px-4 py-3 text-sm">
        <p class="font-semibold text-slate-900"><%= current_user.name %></p>
        <p class="text-xs uppercase tracking-[0.35em] text-emerald-500">Online</p>
        <%= link_to "View profile", profile_path, class: "mt-3 inline-flex w-full items-center justify-center gap-2 rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm font-semibold text-indigo-600 transition hover:-translate-y-0.5 hover:bg-indigo-50" %>
      </div>
    </div>

    <div class="rounded-xl border border-slate-200 bg-white px-4 py-3 text-sm text-slate-500">
      <p class="font-semibold text-slate-700">Need help?</p>
      <p class="mt-1 text-slate-500">Reach the Artifisi crew for onboarding or support.</p>
      <a href="mailto:hello@artifisi.com" class="mt-3 inline-flex items-center gap-2 text-sm font-semibold text-indigo-600 hover:text-indigo-700">Contact support â†’</a>
    </div>
    <% if block_given? %>
      <%= yield %>
    <% end %>
    <%= button_to "Log out", session_path, method: :delete, class: "w-full inline-flex items-center justify-center gap-2 rounded-xl border border-slate-200 bg-slate-100 px-4 py-2 text-sm font-semibold text-slate-700 transition hover:-translate-y-0.5 hover:bg-slate-200", form_class: "space-y-0" %>
  </div>
</aside>
