<% content_for :body_class, "bg-slate-900" %>
<% content_for :main_class, "min-h-screen pt-0" %>

<div class="dashboard-container flex min-h-screen w-full">
  <div class="flex-1">
    <div class="grid min-h-screen w-full gap-0 border border-slate-200/70 bg-white shadow-2xl shadow-slate-900/30 lg:grid-cols-[260px_minmax(0,1fr)]">
      <aside class="flex flex-col justify-between border-b border-slate-200/60 bg-slate-50 p-6 lg:sticky lg:top-0 lg:h-screen lg:border-b-0 lg:border-r">
        <div class="space-y-10">
          <div class="space-y-2">
            <span class="inline-flex h-12 w-12 items-center justify-center rounded-2xl bg-gradient-to-r from-[#615bff] to-[#3d32ff] text-white text-xl font-semibold shadow-sm">A</span>
            <div>
              <p class="text-xs font-semibold uppercase tracking-[0.35em] text-indigo-600">Navigation</p>
              <p class="text-sm text-slate-500">Quick access</p>
            </div>
          </div>

          <nav class="space-y-1 text-sm font-medium text-slate-600">
            <a class="flex items-center gap-3 rounded-xl border border-slate-200 bg-white px-4 py-3 text-indigo-600 shadow-sm" href="#overview">
              <span class="inline-flex h-8 w-8 items-center justify-center rounded-full bg-indigo-50 text-indigo-500">üè†</span>
              Dashboard
            </a>
            <a class="flex items-center gap-3 rounded-xl px-4 py-3 hover:bg-slate-100" href="#recent-activity">
              <span class="inline-flex h-8 w-8 items-center justify-center rounded-full bg-slate-100 text-slate-500">üóÇÔ∏è</span>
              Projects
            </a>
            <a class="flex items-center gap-3 rounded-xl px-4 py-3 hover:bg-slate-100" href="#resources">
              <span class="inline-flex h-8 w-8 items-center justify-center rounded-full bg-slate-100 text-slate-500">üìö</span>
              Resources
            </a>
          </nav>

          <div class="space-y-2">
            <p class="text-xs font-semibold uppercase tracking-[0.35em] text-slate-400">Your teams</p>
            <div class="space-y-2 text-sm text-slate-600">
              <div class="flex items-center gap-3 rounded-xl border border-slate-200 bg-white px-3 py-2">
                <span class="inline-flex h-8 w-8 items-center justify-center rounded-full bg-slate-100 text-slate-500">AI</span>
                Artifisi Core
              </div>
              <div class="flex items-center gap-3 rounded-xl border border-slate-200 bg-white px-3 py-2">
                <span class="inline-flex h-8 w-8 items-center justify-center rounded-full bg-slate-100 text-slate-500">RT</span>
                RTFC Squad
              </div>
            </div>
          </div>
        </div>

        <div class="space-y-3">
          <div class="rounded-xl border border-slate-200 bg-white px-4 py-3 text-sm text-slate-500">
            <p class="font-semibold text-slate-700">Need help?</p>
            <p class="mt-1 text-slate-500">Reach the Artifisi crew for onboarding or support.</p>
            <a href="#support" class="mt-3 inline-flex items-center gap-2 text-sm font-semibold text-indigo-600 hover:text-indigo-700">Contact support ‚Üí</a>
          </div>
          <div class="rounded-xl border border-slate-200 bg-white px-4 py-3 text-sm text-slate-600">
            <p class="font-semibold text-slate-900"><%= @user.name %></p>
            <p class="text-xs uppercase tracking-[0.35em] text-emerald-500">Online</p>
          </div>
          <%= button_to "Log out", session_path, method: :delete, class: "w-full inline-flex items-center justify-center gap-2 rounded-xl border border-slate-200 bg-slate-100 px-4 py-2 text-sm font-semibold text-slate-700 transition hover:-translate-y-0.5 hover:bg-slate-200", form_class: "space-y-0" %>
        </div>
      </aside>

      <div class="flex flex-col">
        <header class="sticky top-0 z-40 flex items-center justify-between border-b border-slate-200/80 bg-white/80 px-6 py-6 backdrop-blur supports-[backdrop-filter]:bg-white/60 lg:px-10">
          <div>
            <p class="text-xs font-semibold uppercase tracking-[0.35em] text-indigo-600">Workspace</p>
            <h1 class="mt-2 text-2xl font-semibold tracking-tight text-slate-900">Welcome back, <%= @user.name %></h1>
          </div>
          <div class="hidden items-center gap-2 rounded-2xl border border-slate-200 bg-slate-50 px-4 py-2 text-sm text-slate-500 md:inline-flex">
            <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="1.5"><circle cx="7" cy="7" r="4"></circle><path d="m11 11 4 4"></path></svg>
            <span>Search</span>
          </div>
        </header>

        <main class="flex-1 space-y-10 bg-white px-6 py-8 lg:px-10">
          <section id="overview" class="rounded-2xl border border-dashed border-slate-200 bg-slate-50 px-6 py-10">
            <div class="grid gap-6 md:grid-cols-3">
              <div>
                <p class="text-xs font-medium uppercase tracking-[0.3em] text-indigo-600">Projects</p>
                <p class="mt-3 text-3xl font-semibold text-slate-900">2</p>
                <p class="mt-2 text-sm text-slate-500">Active initiatives under your team.</p>
              </div>
              <div>
                <p class="text-xs font-medium uppercase tracking-[0.3em] text-indigo-600">Models</p>
                <p class="mt-3 text-3xl font-semibold text-slate-900">5</p>
                <p class="mt-2 text-sm text-slate-500">Latest deployments monitored.</p>
              </div>
              <div>
                <p class="text-xs font-medium uppercase tracking-[0.3em] text-indigo-600">Team</p>
                <p class="mt-3 text-3xl font-semibold text-slate-900">12</p>
                <p class="mt-2 text-sm text-slate-500">Members collaborating across units.</p>
              </div>
            </div>
          </section>

          <section id="recent-activity" class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
            <header class="flex items-center justify-between">
              <div>
                <h2 class="text-lg font-semibold text-slate-900">Recent activity</h2>
                <p class="text-sm text-slate-500">Stay in sync with what‚Äôs happening.</p>
              </div>
              <a href="#recent-activity" class="text-sm font-medium text-indigo-600 hover:text-indigo-700 underline-offset-4 hover:underline">View all</a>
            </header>
            <ul class="mt-6 space-y-4">
              <li class="rounded-2xl border border-slate-200 bg-slate-50 p-4">
                <p class="text-sm font-medium text-slate-900">RTFC assistant retrained</p>
                <p class="text-sm text-slate-500">Deployed to production ¬∑ 2 hours ago</p>
              </li>
              <li class="rounded-2xl border border-slate-200 bg-slate-50 p-4">
                <p class="text-sm font-medium text-slate-900">Forecast insights updated</p>
                <p class="text-sm text-slate-500">New datasets ingested ¬∑ Yesterday</p>
              </li>
              <li class="rounded-2xl border border-slate-200 bg-slate-50 p-4">
                <p class="text-sm font-medium text-slate-900">Team invite accepted</p>
                <p class="text-sm text-slate-500">Amirul joined the workspace ¬∑ 3 days ago</p>
              </li>
            </ul>
          </section>

          <section id="resources" class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
            <h2 class="text-lg font-semibold text-slate-900">Resources</h2>
            <p class="mt-2 text-sm text-slate-600">Keep building with best practices and product guidance.</p>
            <div class="mt-6 grid gap-4 md:grid-cols-2">
              <a href="#docs" class="rounded-2xl border border-slate-200 bg-slate-50 p-5 transition hover:-translate-y-0.5 hover:shadow-md">
                <p class="text-sm font-semibold text-slate-900">Documentation</p>
                <p class="mt-2 text-sm text-slate-500">API references and implementation examples.</p>
              </a>
              <a href="#support" class="rounded-2xl border border-slate-200 bg-slate-50 p-5 transition hover:-translate-y-0.5 hover:shadow-md">
                <p class="text-sm font-semibold text-slate-900">Support</p>
                <p class="mt-2 text-sm text-slate-500">Reach the team for onboarding or troubleshooting.</p>
              </a>
            </div>
          </section>
        </main>
      </div>
    </div>
  </div>
</div>
