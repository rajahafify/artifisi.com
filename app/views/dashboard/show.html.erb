<% content_for :sidebar_active, :dashboard %>
<% content_for :header_label, "Workspace" %>
<% content_for :header_title, "Welcome back, #{@user.name}" %>
<% content_for :header_subtitle, "Monitor your team and recent activity across Artifisi." %>
<% content_for :header_actions do %>
  <div class="hidden items-center gap-2 rounded-2xl border border-slate-200 bg-slate-50 px-4 py-2 text-sm text-slate-500 md:inline-flex">
    <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="1.5"><circle cx="7" cy="7" r="4"></circle><path d="m11 11 4 4"></path></svg>
    <span>Search</span>
  </div>
<% end %>

<section id="users" class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
  <header class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
    <div>
      <p class="text-xs font-semibold uppercase tracking-[0.35em] text-indigo-600">Users</p>
      <h2 class="mt-2 text-xl font-semibold text-slate-900">Team members</h2>
      <p class="text-sm text-slate-500">Showing the five most recently added users.</p>
    </div>
    <div class="flex flex-col items-stretch gap-2 sm:flex-row">
      <%= link_to "Add user", new_user_path, class: "inline-flex items-center justify-center gap-2 rounded-full bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:-translate-y-0.5 hover:bg-indigo-700" %>
      <%= link_to "View more", users_path, class: "inline-flex items-center justify-center gap-2 rounded-full border border-slate-200 bg-white px-4 py-2 text-sm font-semibold text-slate-700 transition hover:-translate-y-0.5 hover:bg-slate-100" %>
    </div>
  </header>

  <div class="mt-6 overflow-hidden rounded-2xl border border-slate-200">
    <table class="min-w-full divide-y divide-slate-200 text-left text-sm">
      <thead class="bg-slate-50 text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">
        <tr>
          <th scope="col" class="px-6 py-3">Name</th>
          <th scope="col" class="px-6 py-3">Email</th>
          <th scope="col" class="px-6 py-3">Created</th>
          <th scope="col" class="px-6 py-3 text-right">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-slate-200 bg-white">
        <% if @recent_users.any? %>
          <% @recent_users.each do |recent_user| %>
            <tr>
              <td class="px-6 py-4 font-medium text-slate-900"><%= recent_user.name %></td>
              <td class="px-6 py-4 text-slate-600"><%= recent_user.email %></td>
              <td class="px-6 py-4 text-slate-500"><%= recent_user.created_at.to_fs(:long) %></td>
              <td class="px-6 py-4">
                <div class="flex justify-end gap-2">
                  <%= link_to "Update", edit_user_path(recent_user), class: "inline-flex items-center gap-2 rounded-full border border-slate-200 bg-white px-3 py-1.5 text-xs font-semibold uppercase tracking-wide text-slate-700 transition hover:-translate-y-0.5 hover:bg-slate-100" %>
                  <%= button_to "Delete", user_path(recent_user), method: :delete, data: { turbo_confirm: "Delete #{recent_user.name}?" }, class: "inline-flex items-center gap-2 rounded-full border border-rose-200 bg-white px-3 py-1.5 text-xs font-semibold uppercase tracking-wide text-rose-600 transition hover:-translate-y-0.5 hover:bg-rose-50" %>
                </div>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="4" class="px-6 py-4 text-sm text-slate-500">No users found.</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>

<section id="blogs" class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
  <header class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
    <div>
      <p class="text-xs font-semibold uppercase tracking-[0.35em] text-indigo-600">Content</p>
      <h2 class="mt-2 text-xl font-semibold text-slate-900">Blog posts</h2>
      <p class="text-sm text-slate-500">Latest articles shared with the team.</p>
    </div>
    <%= link_to "View posts", posts_path, class: "inline-flex items-center justify-center gap-2 rounded-full bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:-translate-y-0.5 hover:bg-indigo-700" %>
  </header>

  <div class="mt-6 overflow-hidden rounded-2xl border border-slate-200">
    <table class="min-w-full divide-y divide-slate-200 text-left text-sm">
      <thead class="bg-slate-50 text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">
        <tr>
          <th scope="col" class="px-6 py-3">Title</th>
          <th scope="col" class="px-6 py-3">Status</th>
          <th scope="col" class="px-6 py-3">Author</th>
          <th scope="col" class="px-6 py-3">Updated</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-slate-200 bg-white">
        <% if @recent_posts.any? %>
          <% @recent_posts.each do |post| %>
            <tr>
              <td class="px-6 py-4 font-medium text-slate-900"><%= post.title %></td>
              <td class="px-6 py-4">
                <span class="inline-flex items-center rounded-full border border-slate-200 bg-slate-50 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-slate-600"><%= post.status.titleize %></span>
              </td>
              <td class="px-6 py-4 text-slate-600"><%= post.author.name %></td>
              <td class="px-6 py-4 text-slate-500"><%= post.updated_at.to_fs(:long) %></td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="4" class="px-6 py-4 text-sm text-slate-500">No posts found. Start by creating a new post.</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>
