<% content_for :sidebar_active, :dashboard %>
<% content_for :header_label, "Workspace" %>
<% content_for :header_title, "Welcome back, #{@user.name}" %>
<% content_for :header_subtitle, "Monitor your team and recent activity across Artifisi." %>
<% content_for :header_actions do %>
  <div class="hidden items-center gap-2 rounded-2xl border border-slate-200 bg-slate-50 px-4 py-2 text-sm text-slate-500 md:inline-flex">
    <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="1.5"><circle cx="7" cy="7" r="4"></circle><path d="m11 11 4 4"></path></svg>
    <span>Search</span>
  </div>
  <%= link_to "Add post",
              new_post_path,
              class: "inline-flex items-center justify-center gap-2 rounded-full bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:-translate-y-0.5 hover:bg-indigo-700" %>
<% end %>

<%= render "dashboard/section",
           id: "users",
           badge: "Users",
           title: "Team members",
           subtitle: "Showing the five most recently added users.",
           add_label: "Add user",
           add_path: new_user_path,
           view_label: "View more",
           view_path: users_path do %>
  <%= render "dashboard/users_table", users: @recent_users %>
<% end %>

<%= render "dashboard/section",
           id: "contacts",
           badge: "Leads",
           title: "Contact requests",
           subtitle: "Latest messages submitted from the website form.",
           add_label: "Add contact",
           add_path: new_contact_path,
           view_label: "View more",
           view_path: contacts_path do %>
  <%= render "dashboard/contacts_table", contacts: @recent_contacts %>
<% end %>

<%= render "dashboard/section",
           id: "blogs",
           badge: "Content",
           title: "Blog posts",
           subtitle: "Latest articles shared with the team.",
           add_label: "Add post",
           add_path: new_post_path,
           view_label: "View more",
           view_path: posts_path do %>
  <%= render "dashboard/posts_table", posts: @recent_posts %>
<% end %>
