<% content_for :sidebar_active, :blogs %>
<% content_for :header_label, "Publishing" %>
<% content_for :header_title, "Edit #{@post.title}" %>
<% content_for :header_subtitle, "Update the post content or adjust the publication status." %>
<% content_for :header_actions do %>
  <%= link_to "Back to post",
              post_path(@post),
              class: "inline-flex items-center justify-center gap-2 rounded-full border border-slate-200 bg-white px-4 py-2 text-sm font-semibold text-slate-700 transition hover:-translate-y-0.5 hover:bg-slate-100" %>
<% end %>

<div class="mx-auto max-w-5xl space-y-8">
  <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
    <h2 class="text-lg font-semibold text-slate-900">Post details</h2>
    <p class="mt-1 text-sm text-slate-500">Modify the post copy or change the status before publishing.</p>
    <%= render "form", post: @post %>
  </div>
</div>
