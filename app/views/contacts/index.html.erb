<% content_for :sidebar_active, :contacts %>
<% content_for :header_label, "Leads" %>
<% content_for :header_title, "Contact requests" %>
<% content_for :header_subtitle, "Review every inquiry submitted through the Artifisi contact form." %>
<% content_for :header_actions do %>
  <%= link_to "Add contact",
              new_contact_path,
              class: "inline-flex items-center justify-center gap-2 rounded-full bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:-translate-y-0.5 hover:bg-indigo-700" %>
<% end %>

<section class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
  <header class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
    <div>
      <p class="text-xs font-semibold uppercase tracking-[0.35em] text-indigo-600">Leads</p>
      <h2 class="mt-2 text-xl font-semibold text-slate-900">All contact requests</h2>
      <p class="text-sm text-slate-500">Most recent messages appear first so your team stays responsive.</p>
    </div>
    <%= link_to "Back to dashboard",
                dashboard_path,
                class: "inline-flex items-center justify-center gap-2 rounded-full border border-slate-200 bg-white px-4 py-2 text-sm font-semibold text-slate-700 transition hover:-translate-y-0.5 hover:bg-slate-100" %>
  </header>

  <div class="mt-6 overflow-hidden rounded-2xl border border-slate-200">
    <%= render "dashboard/contacts_table", contacts: @contacts %>
  </div>
</section>
